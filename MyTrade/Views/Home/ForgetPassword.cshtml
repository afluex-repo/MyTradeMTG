                                    <div class="text-center mb-3">
                                        <a href="/Home/index"><img src="~/MytradeWebsite/assets/img/logo.png" style="width:170px" alt=""></a>
                                    </div>
                                    <h4 class="text-center mb-4">Forget Password</h4>
                                   @using (Html.BeginForm("ForgetPassword", "Home", FormMethod.Post, new { @id = "Form1" }))
                                   {
                                        <div class="form-group">
                                            <label class="mb-1"><strong>Login Id</strong></label>
                                            @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @Placeholder = "LoginId" })
                                        </div>
                                        <div class="form-group">
                                            <label class="mb-1"><strong>Mobile No.</strong></label>
                                           @Html.TextBoxFor(m => m.MobileNo, new { @class = "form-control", @Placeholder = "Mobile No" })
                                        </div>
                                        <div class="text-center">
                                            <input type="submit" id="forgetpassword" class="btn btn-primary btn-block" name="forgetpassword" value="Submit" onclick="return validateform();" />
                                            @*<button type="submit" class="btn btn-primary btn-block">Sign Me In</button>*@
                                        </div>
                                        <div class="new-account mt-3">
                                            <p>Back To <a href="/Home/Login" class="text-primary">Log In</a></p>
                                        </div>
                                        <div class="division">
                                            <span class="text-danger"> @TempData["Login"] </span><br />
                                        </div>
                                   }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

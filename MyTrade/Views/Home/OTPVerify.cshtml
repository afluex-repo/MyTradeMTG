@model MyTrade.Models.Home

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>OTPVerify</title>
</head>
<body>
    <div>

        <link href="~/assets/css/scrollspyNav.css" rel="stylesheet" type="text/css" />
        <link href="~/assets/css/components/cards/card.css" rel="stylesheet" type="text/css" />
        @using (Html.BeginForm("OTPVerify", "Home", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
        {
            <div class="container" style="margin-top:180px;">
                <div class="row layout-top-spacing">
                    <div class="col-lg-12 col-12 layout-spacing">
                        <div class="statbox widget box box-shadow p-5">
                            <div class="">

                                <div class="row">
                                    <div class="col-sm-4">
                                    </div>
                                    <div class="col-sm-6">
                                    </div>
                                    <div class="col-sm-2">
                                        <a href="/Home/Login" class="btn btn-primary btn-block">Back To Login</a>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xl-12 col-md-12 col-sm-12 col-12 text-center">
                                        <h4 style="color:#ff8100; text-align:center;">OTP Verify</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="">
                                @*<div class="card component-card_3" style="background:linear-gradient(#2dcffb24, #f7b36a);">*@
                                <div class="card component-card_3" style="background:linear-gradient(#000000, #000000);">
                                    <div class="card-body">
                                        <img src="~/assets/img/tradelogo.png" class="card-img-top" alt="...">
                                        <br />
                                        <span style="color:red;">
                                            @TempData["OtpVerify"]
                                            @TempData["error"]
                                            @TempData["mobileupdate"]
                                        </span>
                                        <div class="card-star_rating">
                                            @Html.TextBoxFor(m => m.OtpVerify, new { @class = "form-control", @placeholder = "Enter OTP" })
                                        </div>
                                        <p class="card-text">
                                            <input class="btn btn-success btn-block" name="btn_Pin" id="btn_Pin" onclick="return validateform()" type="submit" value="Verify" />
                                        </p>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>
@*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>*@


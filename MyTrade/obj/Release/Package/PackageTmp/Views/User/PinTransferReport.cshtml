@model MyTrade.Models.Pin
@{
    ViewBag.Title = "PinTransferReport";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@using (Html.BeginForm("PinTransferReport", "User", FormMethod.Post, new { @id = "form3", enctype = "multipart/form-data" }))
{
    <div class="content-body">
        <div class="container-fluid">
            <div class="row layout-top-spacing">
                <div class="col-lg-12 col-12 layout-spacing">
                    <div class="card">
                        <div class="card-header">
                            <h4>Pin Transfer Report</h4>
                            <span class="text-danger">
                                @TempData["Pin"]
                            </span>
                        </div>

                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-3 col-md-3">
                                    <div class="form-group">
                                        To Login Id
                                        @Html.TextBoxFor(m => m.ToLoginId, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3">
                                    <div class="form-group">
                                        EPin No
                                        @Html.TextBoxFor(m => m.ePinNo, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-3">
                                    <div class="form-group mt-3">
                                        <input type="submit" class="btn btn-info" name="GetDetails" id="GetDetails" value="Get Details" />
                                    </div>
                                </div>
                            </div>
                      
                    <div class="table-responsive mt-4">
                        <table class="table table-bordered w-100 mb-0" id="html5-extension" data-page-length='20'>
                            <thead>
                                <tr>
                                    <th>Sr No.</th>
                                    <th>EPin No</th>
                                    <th>Pin Amount</th>
                                    <th>BV</th>
                                    <th>Package Name</th>
                                    @*<th>From Id</th>
                                        <th>From Name</th>*@
                                    <th>To Id</th>
                                    <th>To Name</th>
                                    <th>Transfer Date</th>


                                </tr>

                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    if (Model.lst != null)
                                    {
                                        int i = 1;
                                        foreach (var Item in Model.lst)
                                        {
                                            <tr class="text-left">

                                                <td>
                                                    @i
                                                </td>
                                                <td>@Item.ePinNo</td>
                                                <td>@Item.PinAmount</td>
                                                <td>@Item.BV</td>
                                                <td>@Item.ProductName</td>
                                                @*<td>@Item.FromId</td>
                                                    <td>@Item.FromName</td>*@
                                                <td>@Item.ToId</td>
                                                <td>@Item.ToName</td>
                                                <td>@Item.TransferDate</td>
                                            </tr>
                                            i++;
                                        }

                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
                </div>
            </div>
    </div>
}


@model MyTradeMTG.Models.UserWallet

@{
    ViewBag.Title = "ROIWallet";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<link href="~/plugins/flatpickr/flatpickr.css" rel="stylesheet" type="text/css">
<link href="~/plugins/flatpickr/custom-flatpickr.css" rel="stylesheet" type="text/css">

@using (Html.BeginForm("ROIWallet", "Wallet", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="content-body">
        <div class="container-fluid">
            <div class="row layout-top-spacing">
                <div class="col-lg-12 col-12 layout-spacing">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <h4>TPS Wallet</h4>
                                    <span class="text-danger">
                                        @TempData["Package"]
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    From Date
                                    @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @Placeholder = "From Date", @readonly = true })

                                </div>
                                <div class="col-md-4">
                                    To Date
                                    @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @Placeholder = "To Date", @readonly = true })

                                </div>
                                <div class="col-md-4" style="margin-top:25px;">
                                    <div class="form-group">
                                        <input class="btn btn-success pull-left" type="submit" value="Search" id="Search" name="Search" />
                                    </div>
                                </div>
                                <div class="mt-4">
                                    <table id="html5-extension" class="table table-hover non-hover" style="width:100%" data-page-length='20'>
                                        <thead>
                                            <tr>
                                                <th>S No.</th>
                                                <th>Narration</th>
                                                <th>Cr MTG /USDT</th>
                                                <th>Dr MTG /USDT</th>
                                                <th>Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                if (Model.lstTps != null)
                                                {
                                                    int i = 1;
                                                    foreach (var Item in Model.lstTps)
                                                    {
                                                        <tr class="text-left">
                                                            <td>@i</td>
                                                            <td>@Item.Narration</td>
                                                            <td>@Item.CrAmount</td>
                                                            <td>@Item.DrAmount</td>
                                                            <td>@Item.TransactionDate</td>
                                                        </tr>
                                                        i++;
                                                    }
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        }

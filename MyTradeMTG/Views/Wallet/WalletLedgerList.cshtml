@model MyTradeMTG.Models.UserWallet

@{
    ViewBag.Title = "WalletLedgerList";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


@using (Html.BeginForm("WalletLedgerList", "Wallet", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="content-body">
        <div class="container-fluid">
            <div class="row layout-top-spacing">
                <div class="col-lg-12 col-12 layout-spacing">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Wallet Ledger</h4>
                            <span class="text-danger">
                                @TempData["Package"]
                            </span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4 form-group">
                                            From Date
                                            @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @Placeholder = "From Date", @readonly = true })
                                        
                                </div>
                                <div class="col-md-4 form-group">
                                            To Date
                                            @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @Placeholder = "To Date", @readonly = true })
                                       
                                </div>
                                <div class="col-md-4 mt-4">
                                    <div class="form-group">
                                        <input class="btn btn-success pull-left" type="submit" value="Search" id="Search" name="Search" />
                                    </div>
                                </div>
                                <table id="html5-extension" class="table table-hover non-hover" style="width:100%" data-page-length='20'>
                                    <thead>
                                        <tr>
                                            <th>S No.</th>
                                            <th>Cr MTG /USDT</th>
                                            <th>Dr MTG /USDT</th>
                                            <th>MTG /USDT Balance</th>
                                            <th>Narration</th>
                                            <th>Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstWalletLedger != null)
                                            {
                                                int i = 1;
                                                foreach (var Item in Model.lstWalletLedger)
                                                {
                                                    <tr class="text-left">
                                                        <td>@i</td>
                                                        <td>@Item.CrAmount</td>
                                                        <td>@Item.DrAmount</td>
                                                        <td>@Item.Balance</td>
                                                        <td>@Item.Narration</td>
                                                        <td>@Item.TransactionDate</td>
                                                    </tr>
                                                    i++;
                                                }
                                            }
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th></th>
                                            <th>Total Cr MTG Token/USDT : @ViewBag.TotalCrAmount</th>
                                            <th> Total Dr MTG Token/USDT : @ViewBag.TotalDrAmount</th>
                                            <th>Available MTG Token/USDT Balance : @ViewBag.Available</th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
         </div>
       </div>
        }
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js" type="text/javascript"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>
        <link href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="Stylesheet" type="text/css" />

        <script>
            $('#FromDate').datepicker({
                dateFormat: 'dd/mm/yy',
            });
            $('#ToDate').datepicker({
                dateFormat: 'dd/mm/yy',
            });
        </script>


















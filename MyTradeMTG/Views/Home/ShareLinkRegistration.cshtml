                                            <button type="button" class="btn btn-primary btn-sm" onclick="return editregistration();" id="Edit">Edit</button>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="action_btns mt-3 text-center mb-3 ">
                                            <center><i class="fa fa-home"></i> Back to <a href="/Website/Index" class="text-dark"><strong> home</strong></a></center>
                                        </div>
                                    </div>
                                </div>
                             
                                
                            </form>
                        </div>
                        <!--Register Form end-->
                    </div>
                </div>
                <div class="col-md-4"></div>
            </div>
        </div>

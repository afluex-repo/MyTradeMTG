<script>
    function getsponsordetails(obj) {
        debugger;
        $("#divload").css({ 'display': '' });
        $(".errortext").removeClass("errortext");
        $.ajax({
            url: '/Home/GetSponserDetails',
            type: 'GET',
            dataType: 'JSON',
            data: { 'ReferBy': $(obj).val() },
            success: function (response) {
                if (response.Result == "Yes") {
                    $('#SponsorName').text(response.DisplayName);
                }
                else {

                    $("#SponsorId").addClass('errortext');
                    $('#SponsorName').val('');
                    $('#SponsorId').val('');
                    $('#SponsorId').focus();
                    alert(response.Result);
                }
            }
        })
    }

    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;
        return true;
    }

    function confirmregistration() {
        $(".errortext").removeClass("errortext");
        if ($('#SponsorId').val() == '') {
            $("#SponsorId").addClass('errortext');
            $('#SponsorId').focus();
            return false;
        }
        if ($('#FirstName').val() == '') {
            $("#FirstName").addClass('errortext');
            $('#FirstName').focus();
            return false;
        }
        if ($('#phone1').val() == '') {
            $("#phone1").addClass('errortext');
            $('#phone1').focus();
            return false;
        }
        if ($('#Email').val() == '') {
            $("#Email").addClass('errortext');
            $('#Email').focus();
            return false;
        }
        if ($('#Password2').val() == '') {
            $("#Password2").addClass('errortext');
            $('#Password2').focus();
            return false;
        }
        if ($('#ConfirmPassword').val() == '') {
            $("#ConfirmPassword").addClass('errortext');
            $('#ConfirmPassword').focus();
            return false;
        }

        $("#phone1").attr("disabled", "disabled");
        $("#FirstName").attr("disabled", "disabled");
        $("#SponsorId").attr("disabled", "disabled");
        $("#LastName").attr("disabled", "disabled");
        $("#Password2").attr("disabled", "disabled");
        $("#ConfirmPassword").attr("disabled", "disabled");
        $("#Email").attr("disabled", "disabled");
        $('#Confirm').attr("disabled", "disabled");
        $('#Confirm').hide();
        $('#divReg').show();
    }

    function editregistration() {
        $("#phone1").attr("disabled", false);
        $("#FirstName").attr("disabled", false);
        $("#LastName").attr("disabled", false);
        $("#SponsorId").attr("disabled", false);
        $("#LastName").attr("disabled", false);
        $("#Password2").attr("disabled", false);
        $("#ConfirmPassword").attr("disabled", false);
        $("#Email").attr("disabled", false);
        $('#Confirm').show();
        $('#Confirm').attr("disabled", false);
        $('#divReg').hide();
    }

    function saveregistration() {
        debugger;
        var CountryCode = $(".iti__selected-dial-code").text();

        country1.innerHTML = country.value.replace(/ *\([^)]*\) */g, "");

        var Country = $("#country1").text();

        $('#Register').attr("disabled", "disabled");
        $("#divload").css({ 'display': '' });
        var Leg = "";
        if ($('#left').prop('checked')) {
            Leg = "L";
        }
        else {
            Leg = "R";
        }
        $.ajax({
            url: "/Website/RegistrationAction",
            Type: "Get",
            DataType: "JSON",
            data: { SponsorId: $("#SponsorId").val(), FirstName: $("#FirstName").val(), LastName: $("#LastName").val(), MobileNo: $("#phone1").val(), Leg: Leg, Password: $("#Password2").val(), Email: $("#Email").val(), CountryCode: CountryCode, Country: Country },
            success: function (data) {
                debugger;
                if (data.Result == "1") {
                    $("#UserDisplayName1").text(data.Name),
                    $("#UserLoginId1").text(data.LoginId),
                    $("#UserPassword1").text(data.Password),
                   $('.popupContainer').css('display', 'none');
                    $('#modal').css('display', 'none');
                    $("#confirm_registration").modal("show");

                    $("#phone1").val("");
                    $("#FirstName").val("");
                    $("#LastName").val("");
                    $("#SponsorId").val("");
                    $("#LastName").val("");
                    $("#Password2").val("");
                    $("#ConfirmPassword").val("");
                    $("#Email").val("");
                    $("#SponsorName").text("");
                    $('#checkboxvalue123').prop('checked', false);
                    $("#confirm_registration").modal("show");
                    $("#phone1").attr("disabled", false);
                    $("#FirstName").attr("disabled", false);
                    $("#LastName").attr("disabled", false);
                    $("#SponsorId").attr("disabled", false);
                    $("#LastName").attr("disabled", false);
                    $("#Password2").attr("disabled", false);
                    $("#ConfirmPassword").attr("disabled", false);
                    $("#Email").attr("disabled", false);
                    $('#Confirm').show();
                    $('#Confirm').attr("disabled", false);
                    $('#divReg').hide();
                    $('#Register').attr("disabled", false);
                    @*window.location.href = '@Url.Action("ShareLinkRegistration", "Home")';*@
                }
                else {
                    $("#divload").css({ 'display': 'none' });
                    alert(data.Result);
                }
            }

        });
    }




    function isNumberKey(evt) {

        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
        && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }

    function validateConfPassword() {
        var password = $('#Password2').val();
        var ConfirmPassword = $('#ConfirmPassword').val();
        if (password != ConfirmPassword) {
            $("#Password2").addClass('errortext');
            $("#ConfirmPassword").addClass('errortext');
            $('#Password2').val('');
            $('#ConfirmPassword').val('');
            alert("Password and Confirm Password are different")
            return false;
        }
    }
    function checkEmail() {
        debugger;

        if (($("#Email").val() != "")) {
            if ($("#Email").val()) {

                var email = document.getElementById('Email');
                var filter = new RegExp(/^(("[\w-\s]+")|([\w-]+(?:\.[\w-]+)*)|("[\w-\s]+")([\w-]+(?:\.[\w-]+)*))(@@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$)|(@@\[?((25[0-5]\.|2[0-4][0-9]\.|1[0-9]{2}\.|[0-9]{1,2}\.))((25[0-5]|2[0-4][0-9]|1[0-9]{2}|[0-9]{1,2})\.){2}(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[0-9]{1,2})\]?$)/i);

                if (!filter.test($("#Email").val())) {
                    alert('Please provide a valid email address');
                    $("#Email").val('');
                    $("#Email").focus();
                    return false;
                }
            }
        }
    }
    function onlyAlphabets(e, t) {
        try {
            if (window.event) {
                var charCode = window.event.keyCode;
            }
            else if (e) {
                var charCode = e.which;
            }
            else { return true; }
            if ((charCode > 64 && charCode < 91) || (charCode > 96 && charCode < 123))
                return true;
            else
                return false;
        }
        catch (err) {
            alert(err.Description);
        }
    }
</script>

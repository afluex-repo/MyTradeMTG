    <title>My Trade || User Login</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" href="~/MyTradeMTGWebsite/assets/img/favicon.png">
    <link href="/UserPanel/css/style.css" rel="stylesheet">
</head>
<body class="vh-100 demo-wrap">
    <div class="authincation h-100 demo-content">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
                                    <div class="text-center mb-3">
                                        <a href="/Home/index">
                                            @*<img src="~/UserPanel/images/MtgCoinPng.png" class="img-fluid" style="width:170px;" />
                                            <h3 class="text-white">My Trade</h3>*@
                                            <img src="~/UserPanel/images/logo with bg.gif" class="img-fluid" styl="width:12rem" />
                                        </a>
                                    </div>
                                    <h4 class="text-center mb-4">Sign in your account</h4>
                                    <form action="/Home/LoginAction" method="post">
                                        <div class="form-group">
                                            <label class="mb-1"><strong>Login Id</strong></label>
                                            @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @Placeholder = "Login Id", @required = "required" })
                                            @*<input type="email" class="form-control" value="hello@example.com">*@
                                        </div>
                                        <div class="form-group">
                                            <label class="mb-1"><strong>Password</strong></label>
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @Placeholder = "Password", @required = "required" })
                                            @*<input type="password" class="form-control" value="Password">*@
                                        </div>
                                        <div class="form-row d-flex justify-content-between mt-4 mb-2">
                                            @*<div class="form-group">
                                                <div class="form-check custom-checkbox ms-1">
                                                    <input type="checkbox" class="form-check-input" id="basic_checkbox_1">
                                                    <label class="form-check-label" for="basic_checkbox_1">Remember my preference</label>
                                                </div>
                                            </div>*@
                                            <div class="form-group">
                                                <a href="/Home/ForgetPassword">Forgot Password?</a>
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                                        </div>
                                        <div class="new-account mt-3">
                                            <p>Don't have an account? <a class="text-primary" href="/Home/Registration">Sign up</a></p>
                                        </div>
                                        <p style="color:red;">
                                            @TempData["Login"]
                                            @Session["error"]
                                        </p>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*<body class="main-body">*@
    <!-- Preloader --
    <div class="preloader">
        <div class="loader">
            <div class="shadow"></div>
            <div class="box"></div>
        </div>
    </div>
    <!-- End Preloader -->
    <!-- Start Login Area --
    <section class="login-area">
        <div class="row m-0 justify-content-center">
            <div class="col-lg-8 col-md-8 col-sm-8 logincol">
                <div class="row login-row">
                    <div class="col-lg-6 col-md-12 col-sm-12 loginimg d-none d-lg-block">
                        <!-- loginimg -->
    <!-- <img src="assets/img/01.png" height="100%"> --
                        </div>
                        <div class="col-lg-6 col-md-12 col-sm-12 loginform">
                            <div class="login-content">
                                <div class="d-table">
                                    <div class="d-table-cell">
                                        <div class="login-form">
                                            <div class="logo">
                                                <a href="/Home/Index"><img src="~/MyTradeMTGWebsite/assets/img/logo.png" alt="image" width="200px"></a>
                                                <h6 class="logo-tagline">One Step Towards Success</h6>
                                            </div>

                                            <h3>Welcome back</h3>
                                            <p>New to My Trade? <a href="/Home/Registration">Sign up</a></p>

                                            <p style="color:red;float:right">
                                                @TempData["Login"]
                                            @Session["error"]
                                        </p>
                                        <form action="/Home/LoginAction" method="post">
                                            <div class="form-group">
                                                @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @Placeholder = "Login Id", @required = "required" })
                                                @*<input type="email" name="email" id="email" placeholder="Your email address" class="form-control">*@
                                            </div>

                                            <div class="form-group">
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @Placeholder = "Password", @required = "required" })
                                            </div>

                                            <button type="submit" class="btn btn-primary">Login</button>

                                            <div class="forgot-password d-flex justify-content-between">
                                                <a href="~/MyTradeMTGWebsite/index.html">Back To Home</a>
                                                <a href="/Home/ForgetPassword">Forgot Password?</a>
                                            </div>

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>




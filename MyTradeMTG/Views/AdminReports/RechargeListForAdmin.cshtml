@model MyTradeMTG.Models.AdminReports

@{
    ViewBag.Title = "RechargeListForAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("RechargeListForAdmin", "AdminReports", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Recharge List</h4>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>Login Id</label>
                                    @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @placeholder = "LoginId" })
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>From Date</label>
                                    @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @placeholder = "dd/mm/yyyy", @readonly = true })
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label>To Date</label>
                                    @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @placeholder = "dd/mm/yyyy", @readonly = true })
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group mt-3">
                                    <input type="submit" id="btnSearch" class="btn btn-success" name="Search" value="Search" style="margin-top:15px;" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <table id="html5-extension" class="table table-hover non-hover" style="width:100%" data-page-length='20'>
                                <thead>
                                    <tr>
                                        <th>S No.</th>
                                        <th>User</th>
                                        <th>Discription</th>
                                        <th>Partner ID</th>
                                        <th>Number</th>
                                        <th>MTG Token/USDT</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstWalletLedger != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstWalletLedger)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.LoginId</td>
                                                    <td>@Item.Provider (@Item.ServerOrderId)</td>
                                                    <td>@Item.ServerOrderId</td>
                                                    <td>@Item.TransactionFor</td>
                                                    <td>@Item.Amount</td>
                                                    <td>@Item.Status</td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                                @*<tfoot>
                                        <tr>
                                            <th></th>
                                            <th>Total Cr Amount : @ViewBag.TotalCrAmount</th>
                                            <th> Total Dr Amount : @ViewBag.TotalDrAmount</th>
                                            <th>Available Balance : @ViewBag.Available</th>
                                        </tr>
                                    </tfoot>*@
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js" type="text/javascript"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>
<link href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="Stylesheet" type="text/css" />

<script>
    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
</script>
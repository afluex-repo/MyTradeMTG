@model MyTradeMTG.Models.User

@{
    ViewBag.Title = "TransferToMTGWallet";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<link href="~/plugins/notification/snackbar/snackbar.min.css" rel="stylesheet" type="text/css" />



@using (Html.BeginForm("TransferToMTGWallet", "User", FormMethod.Post, new
{ /*@id = "form1",*/  enctype = "multipart/form-data" }))
{

    <div class="content-body">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Transfer to MTG Wallet</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="row mb-4">
                                    <div class="col-md-12">
                                        <p class="mb-1" style="color:white;">@TempData["wallettransfer"]</p>
                                        <br />
                                        <label style="color:red">MTG /USDT Wallet(Payout): @ViewBag.PayoutBalance</label>

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-3 mb-3">
                                    <div class="example">
                                        <p class="mb-1"> Login ID<span style="color: red">*</span></p>
                                        <label style="color:#ffffff;">@Model.LoginId</label><br />
                                        @*@Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @placeholder = "LoginID", @readonly = true })*@
                                        <span style="color:#e49d31;">@Model.Name</span>
                                    </div>
                                </div>
                                <div class="col-xl-3 mb-3">
                                    <div class="example">
                                        <p class="mb-1"> MTG /USDT<span style="color: red">*</span></p>
                                        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", @Placeholder = "MTG /USDT", @onkeypress = "return isNumberOrDecimal(event);"})
                                       
                                    </div>
                                </div>
                                <div class="col-xl-3 mb-3" style="margin-top: 30px;">
                                    <div class="example">
                                        <input class="btn btn-success pull-left" type="submit" value="Transfer" id="btnTransferMTG" name="btnTransferMTG" onclick="return validateform();" />

                                    </div>
                                </div>

                            </div>

                            @*<div class="row">
                                <div class="col-md-12">
                                    <input class="btn btn-success pull-left" type="submit" value="Transfer" id="btnTransferMTG" name="btnTransferMTG" onclick="return validateform();" />
                                </div>
                            </div>*@
                        </div>

                    </div>
                </div>

                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Transfer to MTG Wallet List</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="table-responsive mt-4">
                                    <table id="html5-extension" class="table table-hover non-hover" data-sortable="false" data-page-length='20'>
                                        <thead>
                                            <tr>
                                                <th>Sr No.</th>
                                                <th>Transfer Date</th>
                                                <th>Transfer MTG</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                if (Model.TransferMTGWallet != null)
                                                {
                                                    int i = 1;
                                                    foreach (var Item in Model.TransferMTGWallet)
                                                    {
                                                        <tr class="text-left">
                                                            <td>
                                                                @i
                                                            </td>
                                                            <td>@Item.TransferDate</td>
                                                            <td>@Item.MTG</td>
                                                        </tr>
                                                        i++;
                                                    }

                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

}

<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
@*<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>*@
@*<link href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="Stylesheet" type="text/css" />*@
@*<script src="~/MyTradeWebsite/assets/js/jquery.min.js"></script>*@
<script src="~/plugins/notification/snackbar/snackbar.min.js"></script>
<script src="~/assets/js/components/notification/custom-snackbar.js"></script>

@if (TempData["MTGwallettransfer"] != null)
{
    <script>
        $(document).ready(function () {
            debugger;
           
            swal({
                backdrop: true,
                allowOutsideClick: false,
                title: '@TempData["MTGwallettransfer"]',
                type: 'success',
                showCancelButton: 0,
                confirmButtonText: 'OK',
            })
        })
    </script>
}
@if (TempData["MTGwallettransfererror"] != null)
{
    <script>
                $(document).ready(function () {
                    debugger;
                    jQuery.noConflict();
                    swal({
                        backdrop: true,
                        allowOutsideClick: false,
                        title: 'Warning!',
                        text: '@TempData["MTGwallettransfererror"]',
                        type: 'warning',
                        showCancelButton: 0,
                        confirmButtonText: 'OK',
                    })
                })
    </script>
}


<script>

        function validateform() {
            debugger;
            $(".errortext").removeClass("errortext");
            if ($('#LoginId').val() == '') {
                $("#LoginId").addClass('errortext');
                $('#LoginId').focus();
                return false;
            }
            if ($('#Amount').val() == '0') {
                $("#Amount").addClass('errortext');
                $('#Amount').focus();
                return false;
            }
            else {

            }
            return true;
        }


        function isNumberOrDecimal(evt) {
            var charCode = (evt.which) ? evt.which : evt.keyCode;
            if (charCode != 46 && charCode > 31
              && (charCode < 48 || charCode > 57))
                return false;

            return true;
        }

</script>
<style>
    .errortext {
        border: 1px solid red !important;
        background-color: #fff0f0 !important;
    }
</style>




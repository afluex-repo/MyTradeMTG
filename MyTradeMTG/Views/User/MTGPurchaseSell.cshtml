                            </div>
                            <div class="col-12 d-flex justify-content-between">
                                <h4 class="m-b-0">Email :</h4>
                                <p>@ViewBag.Email</p>
                            </div>
                            <div class="col-12 d-flex justify-content-between">
                                <h4 class="m-b-0">Mobile :</h4>
                                <p>@ViewBag.Mobile</p>
                            </div>
                        </div>

}
<!-- Datatable -->
<link href="/UserPanel/vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet">

<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-5">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">User Details</h4>
                    </div>
                    <div class="card-body">
